/* pages/book/book.wxss */
.li-book__title{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.li-book__cotainer{
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.li-book__item{
  width: 50%;
  box-sizing: border-box;
  padding: 80rpx;
  padding-right: 40rpx;
  padding-top: 0rpx;
}
.li-book__item:nth-of-type(2n){
  padding-left: 40rpx;
  padding-right: 80rpx;
}
.li-book__item--content{
  background-color: #fff;
  box-shadow: 0px 2px 2px 0px #e3e3e3;
}
.li-book__item--title{
  color: #333333;
  font-size: 30rpx;
  box-sizing: border-box;
  padding: 20rpx 20rpx 0 20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.li-book__item--author{
  color: #888888;
  box-sizing: border-box;
  font-size: 26rpx;
  padding: 5rpx 20rpx 20rpx 20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}