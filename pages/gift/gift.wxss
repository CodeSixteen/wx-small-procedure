  width: 100vw;
  height: 100vh;
  background-size: 100% auto;
  background-position: center bottom;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  animation: fadeIn 2s;
}

@keyframes magnify {
  0% {
    width: 290rpx;
    height: 98rpx;
    border-radius: 49rpx;
  }
  50% {
    width: 300rpx;
    height: 108rpx;
    border-radius: 54rpx;
  }
  100% {
    width: 290rpx;
    height: 98rpx;
    border-radius: 49rpx;
  }
}

/* 烟花页 style */
.animate-demo {
  display: inline-block;
  animation: move-to-bottom linear infinite;
  animation-duration: 10s;
  position: absolute;
  background: #ffffff;
  border-radius: 50%;
  left: 20%;
  width: 8rpx;
  height: 8rpx;
}
.circle1{
  animation: move-to-botto linear infinite;
  animation-duration: 10s;
  left: 77%;
  width: 10rpx;
  height: 10rpx;
}
.circle2{
  animation: move-to-botto linear infinite;
  animation-duration: 14s;
  left: 46%;
  width: 10rpx;
  height: 10rpx;
}

@keyframes move-to-bottom {
  from {
    top: -10%;
  }
  to {
    top: 120%;
  }
}
@keyframes move-to-botto {
  from {
    top: -20%;
  }
  to {
    top: 110%;
  }
}

