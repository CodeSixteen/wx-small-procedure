.music_box{
  position: absolute;
  top: 200rpx;
  right: 40rpx;
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  border: 2rpx solid #af9993;
  animation: rotate 5s linear infinite;
  display: flex;
  align-items: center;
  justify-content: center;
}
.music_box-stop{
  position: absolute;
  top: 200rpx;
  right: 40rpx;
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  border: 2rpx solid #af9993;
  display: flex;
  align-items: center;
  justify-content: center;
}
.music_box-stop image,
.music_box image{
  width: 66rpx;
  height: 66rpx;
  object-fit: cover !important;
  display: inline-block;
}
.music_line{
  position: absolute;
  width: 90rpx;
  height: 2rpx;
  background-color: #af9993;
  transform: rotate(45deg);
}

@keyframes rotate {
  form {
    transform:rotate(0deg);
  }
  to {
    transform:  rotate(360deg);
  }
}